MCP_SERVER_NAME = "projects/planning-with-ai-f2b84/locations/global/mcpServers/google-firestore.googleapis.com-mcp"

api_registry = ApiRegistry(PROJECT_ID)
registry_tools = api_registry.get_toolset(
    mcp_server_name=MCP_SERVER_NAME
